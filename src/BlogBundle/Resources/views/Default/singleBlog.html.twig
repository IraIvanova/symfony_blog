{% extends '@Blog/base.html.twig' %}


{% block title %}{{ blog.title }}{% endblock %}

{% block body %}

    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        <img src="/images/{{ blog.image}}" alt="{{ blog.title }} image not found" class="large" />
        <div>
            <p>{{ blog.blog|raw }}</p>
        </div>
    </article>
    <a href="{{ path('blog_homepage') }}"><h3>Вернуться назад</h3></a>
    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Комментарии</h3>
            {% include 'BlogBundle:Comment:index.html.twig' with { 'comments': comments } %}

            <h3>Добавить комментарий</h3>
            {{ render(controller('BlogBundle:Comment:add',{'blog_id':blog.id})) }}
        </section>
        </section>


{% endblock %}